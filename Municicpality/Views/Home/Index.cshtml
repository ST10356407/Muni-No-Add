@{
    ViewData["Title"] = "Municipality Portal";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #0a0a0a;
        min-height: 100vh;
        padding: 20px;
        position: relative;
        background-image: radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.08) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(59, 130, 246, 0.06) 0%, transparent 50%);
        background-attachment: fixed;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle at 20px 20px, rgba(255, 255, 255, 0.02) 1px, transparent 1px), radial-gradient(circle at 80px 40px, rgba(255, 255, 255, 0.015) 0.5px, transparent 0.5px), radial-gradient(circle at 40px 80px, rgba(255, 255, 255, 0.025) 1.5px, transparent 1.5px);
            background-size: 100px 100px;
            pointer-events: none;
            z-index: 0;
        }

    h1 {
        color: #ffffff;
        text-align: center;
        margin-bottom: 48px;
        font-size: 3rem;
        font-weight: 700;
        position: relative;
        z-index: 1;
        letter-spacing: -0.02em;
        text-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(24px);
        -webkit-backdrop-filter: blur(24px);
        padding: 48px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        z-index: 1;
        text-align: center;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .container:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.2), 0 12px 40px rgba(0, 0, 0, 0.5);
        }

    p.overview {
        color: #ffffff;
        font-size: 1.2rem;
        margin-bottom: 30px;
        line-height: 1.6;
        text-shadow: 0 0 10px rgba(59, 130, 246, 0.2);
    }

    .btn-primary {
        background: linear-gradient(135deg, black  0%)
        color: #ffffff;
        border: 2px solid rgba(255, 255, 255, 0.12);
        padding: 20px 40px;
        border-radius: 16px;
        cursor: pointer;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.2), 0 0 30px rgba(59, 130, 246, 0.2);
        
    }

    .main-menu-buttons {
        display: flex;
        flex-direction: column;
        gap: 16px;
        margin-bottom: 32px;
    }

    .menu-btn {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .btn-secondary {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
        color: rgba(255, 255, 255, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.1);
        padding: 20px 40px;
        border-radius: 16px;
        cursor: not-allowed;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        opacity: 0.5;
    }

    .btn-secondary:hover {
        transform: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        cursor: not-allowed;
    }

    .engagement-message {
        margin-bottom: 24px;
        font-weight: 600;
        color: #ffffff;
        text-align: center;
        font-size: 1.1rem;
        min-height: 28px;
        transition: all 0.3s ease;
        text-shadow: 0 0 10px rgba(59, 130, 246, 0.2);
    }

    @@media (max-width: 768px) {
        .container {
            margin: 10px;
            padding: 32px 24px;
            border-radius: 20px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 32px;
        }

        p.overview {
            font-size: 1rem;
        }

        .btn-primary {
            padding: 18px 32px;
            font-size: 1.1rem;
        }
    }
@using Municicpality.Models
@model IssueReportLinkedList

@{
    ViewData["Title"] = "Municipality Portal";
}

<style>
   .issue-cards {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin: 30px auto 0 auto;
        max-width: 400px; /* much smaller */
        width: 100%;
    }

    .issue-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        padding: 12px; /* small padding */
        border-radius: 10px; /* smaller border radius */
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #ffffff;
        box-shadow: 0 2px 10px rgba(59, 130, 246, 0.15);
        transition: all 0.2s ease;
        text-align: left;
        font-size: 0.9rem; /* smaller text */
    }

    .issue-card:hover {
        background: rgba(255, 255, 255, 0.12);
        border-color: rgba(255, 255, 255, 0.15);
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2), 0 0 20px rgba(59, 130, 246, 0.15);
    }

    .issue-card h3 {
        margin: 0 0 4px 0;
        font-size: 1rem; /* smaller title */
        color: #3b82f6;
    }

    .issue-card p {
        margin: 2px 0;
        font-size: 0.85rem; /* smaller text */
    }

    .issue-card img {
        max-width: 100%;
        margin-top: 4px;
        border-radius: 4px;
    }
</style>

<h1>Welcome to Municipality Portal</h1>

<div class="container">
    <div id="engagementMessage" class="engagement-message"></div>

    <p class="overview">
        Our portal allows residents to report issues directly to the municipality.
        You can report road, sanitation, utility issues, or any other concerns in your area.
        Stay informed and help us keep the community running smoothly.
    </p>

    <div class="main-menu-buttons">
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary menu-btn"><i class="fas fa-exclamation-triangle"></i> Report an Issue</a>
        <a asp-controller="Events" asp-action="Index" class="btn btn-primary menu-btn"><i class="fas fa-calendar-alt"></i> Local Events & Announcements</a>
            <a asp-controller="Home" asp-action="Status" class="btn btn-primary menu-btn"><i class="fas fa-clipboard-list"></i> Service Request Status</a>
    </div>

    @if (Model?.Head != null)
    {
        <div class="issue-cards">
            @foreach (var report in Model.GetAll())
            {
                <div class="issue-card">
                    <h3>@report.Category - @report.Location</h3>
                    <p>@report.Description</p>
                    <p><small>Submitted: @report.SubmittedAt.ToString("g")</small></p>
                    @if (!string.IsNullOrEmpty(report.AttachmentPath))
                    {
                        <img src="@report.AttachmentPath" alt="Attachment" />
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p style="margin-top:30px; color:#ffffff;">No issue reports yet.</p>
    }
</div>