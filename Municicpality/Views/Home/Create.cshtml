</style>

<h1>Report an Issue</h1>

<div style="text-align: center; margin-bottom: 24px;">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width: auto; padding: 12px 28px; text-transform: none;">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>
</div>



<div class="form-container">
    <!-- Engagement Message -->
    <div id="engagementMessage" class="engagement-message"></div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Location">Location *</label>
            <input asp-for="Location" class="form-control" id="Location" placeholder="Enter the location of the issue" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category">Category *</label>
            <select asp-for="Category" class="form-control" id="Category">
                <option value="">Select Category</option>
                <option>Sanitation</option>
                <option>Roads</option>
                <option>Utilities</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description *</label>
            <textarea asp-for="Description" class="form-control" rows="5" id="Description" placeholder="Describe the issue in detail..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Attach File <span class="optional-text">(Optional)</span></label>
            <div class="file-input-wrapper">
                <input type="file" name="attachment" id="attachment" />
                <label for="attachment" class="file-input-label">
                    <svg style="width: 24px; height: 24px; margin: 0 auto 8px; display: block;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                    </svg>
                    Click to upload file or drag and drop
                </label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit Report</button>
        </div>
    </form>
</div>



<script>
    const engagementMessages = [
        "Great! You're helping improve your community!",
        "Keep going, every report counts!",
        "You're making a difference!",
        "Almost there, thanks for reporting!",
        "Awesome! You're contributing to a better neighborhood!"
    ];

    const messageDiv = document.getElementById('engagementMessage');
    const locationInput = document.getElementById('Location');
    const categorySelect = document.getElementById('Category');
    const descriptionInput = document.getElementById('Description');

    function showRandomMessage() {
        const index = Math.floor(Math.random() * engagementMessages.length);
        messageDiv.textContent = engagementMessages[index];
    }

    // Update message when user finishes interacting with a field
    locationInput.addEventListener('blur', showRandomMessage);
    descriptionInput.addEventListener('blur', showRandomMessage);
    categorySelect.addEventListener('change', showRandomMessage);

    // File input visual feedback
    const fileInput = document.getElementById('attachment');
    const fileLabel = document.querySelector('.file-input-label');
    const originalLabelText = fileLabel.innerHTML;

    fileInput.addEventListener('change', function (e) {
        if (e.target.files.length > 0) {
            const fileName = e.target.files[0].name;
            fileLabel.innerHTML = `<svg style="width: 24px; height: 24px; margin: 0 auto 8px; display: block;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path></svg>File selected: ${fileName}`;
        } else {
            fileLabel.innerHTML = originalLabelText;
        }

        // Update message when file is selected
        showRandomMessage();
    });

    // Show success message if TempData["Message"] exists
    @if (TempData["Message"] != null)
    {
        <text>
            messageDiv.textContent = "@TempData["Message"]";
        </text>
    }
</script>

