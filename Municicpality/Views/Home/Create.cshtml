    .form-container {
        margin: 10px;
        padding: 32px 24px;
        border-radius: 20px;
    }
    
    h1 {
        font-size: 2.5rem;
        margin-bottom: 32px;
    }
    
    .form-control {
        padding: 16px 20px;
        font-size: 1rem;
    }
    
    .btn-primary {
        padding: 18px 32px;
        font-size: 1.1rem;
    }
